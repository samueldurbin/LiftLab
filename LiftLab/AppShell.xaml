<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LiftLab.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:LiftLab.Views"
    xmlns:local="clr-namespace:LiftLab.Views"
    FlyoutBehavior="Disabled"
    Title="LiftLab">

    <TabBar>

        <Tab Title="Community">
            <ShellContent Title="Community" ContentTemplate="{DataTemplate views:Community}" Route="Community" />
        </Tab>
        
        <Tab Title="MyFitness">
            <ShellContent Title="MyFitness" ContentTemplate="{DataTemplate views:MyFitness}" Route="MyFitness" />
        </Tab>

        <Tab Title="MyHealth">
            <ShellContent Title="MyHealth" ContentTemplate="{DataTemplate views:MyHealth}" Route="MyHealth" />
        </Tab>

        <Tab Title="MySettings">
            <ShellContent Title="MySettings" ContentTemplate="{DataTemplate views:MySettings}" Route="MySettings" />
        </Tab>

    </TabBar>

</Shell>
