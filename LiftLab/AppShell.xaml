<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LiftLab.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:LiftLab.Views"
    xmlns:local="clr-namespace:LiftLab.Views"
    FlyoutBehavior="Disabled"
    Title="LiftLab">

    <TabBar>

        <Tab Title="Community">
            <ShellContent Title="Community" ContentTemplate="{DataTemplate views:Community}" Route="Community" />
        </Tab>
        
        <Tab Title="Fitness">
            <ShellContent Title="FitnessPage" ContentTemplate="{DataTemplate views:FitnessPage}" Route="FitnessPage" />
        </Tab>

        <Tab Title="Nutrition">
            <ShellContent Title="Nutrition" ContentTemplate="{DataTemplate views:NutritionHomePage}" Route="NutritionHomePage" />
        </Tab>

        <Tab Title="Friends">
            <ShellContent Title="FriendsPage" ContentTemplate="{DataTemplate views:FriendsPage}" Route="FriendsPage" />
        </Tab>

    </TabBar>

</Shell>
