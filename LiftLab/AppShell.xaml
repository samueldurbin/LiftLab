<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LiftLab.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:LiftLab.Views"
    xmlns:local="clr-namespace:LiftLab.Views"
    FlyoutBehavior="Disabled"
    Title="LiftLab">

    <TabBar>

        <Tab Title="Community">
            <ShellContent Title="Community" Shell.BackgroundColor="Red" Shell.TitleColor="White" ContentTemplate="{DataTemplate views:Community}" Route="Community" />
        </Tab>
        
        <Tab Title="Fitness">
            <ShellContent Title="FitnessPage" Shell.BackgroundColor="Red" Shell.TitleColor="White" ContentTemplate="{DataTemplate views:FitnessPage}" Route="FitnessPage" />
        </Tab>

        <Tab Title="New Post">
            <ShellContent Title="CreatePost" Shell.BackgroundColor="Red" Shell.TitleColor="White" ContentTemplate="{DataTemplate views:CreatePost}" Route="CreatePost" />
        </Tab>

        <Tab Title="Profile">
            <ShellContent Title="ProfilePage" Shell.BackgroundColor="Red" Shell.TitleColor="White" ContentTemplate="{DataTemplate views:ProfilePage}" Route="ProfilePage" />
        </Tab>

    </TabBar>

</Shell>
