<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiftLab.Views.Community"
             xmlns:vm="clr-namespace:LiftLab.ViewModels"
             xmlns:helper="clr-namespace:LiftLab.Helpers"
             Title="Community">
    
    <ContentPage.BindingContext>
        <vm:CommunityPostViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*" Padding="10">
        <Grid ColumnDefinitions="Auto,*,Auto" Padding="10">
            <Label Grid.Column="0" FontFamily="FASolid" Text="{x:Static helper:FontAwesome.Plus}" FontSize="28" TextColor="blue">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigationCommand}" />
                </Label.GestureRecognizers>
            </Label>
            <Label Grid.Column="2" FontFamily="FASolid" Text="{x:Static helper:FontAwesome.PeopleGroup}" FontSize="28" TextColor="blue">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding AddFriendsCommand}" />
                </Label.GestureRecognizers>
            </Label>
        </Grid>
        <StackLayout Grid.Row="1" Padding="0">
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
            <CollectionView ItemsSource="{Binding CommunityPosts}" VerticalOptions="FillAndExpand">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,10" Padding="0" HasShadow="True" CornerRadius="10" BackgroundColor="White">
                            <VerticalStackLayout Padding="0" Spacing="0">
                                <Grid ColumnDefinitions="Auto,*,Auto" Padding="10,10,10,0" VerticalOptions="Center">
                                    <Label Grid.Column="0" FontFamily="FASolid" Text="{x:Static helper:FontAwesome.UserAstronaut}" FontSize="18" VerticalOptions="Center" />
                                    <Label Grid.Column="1" Text="{Binding Username}" FontSize="20" FontAttributes="Bold" HorizontalOptions="StartAndExpand" VerticalOptions="Center" Margin="6,0,0,0">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CommunityPostViewModel}}, Path=ViewUserProfileCommand}" CommandParameter="{Binding .}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <Label Grid.Column="2" FontFamily="FASolid" Text="{x:Static helper:FontAwesome.Eye}" FontSize="18" TextColor="Blue" HorizontalOptions="End" VerticalOptions="Center">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CommunityPostViewModel}}, Path=ShowPlanDetailsCommand}" CommandParameter="{Binding .}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                </Grid>
                                <BoxView HeightRequest="1" Color="Red" HorizontalOptions="Fill" Margin="10,5,10,0" />
                                <Grid ColumnDefinitions="*,Auto" Padding="10,5,10,10" Margin="0,5,0,0">
                                    <Label Grid.Column="0" Text="{Binding Caption}" FontSize="18" HorizontalOptions="StartAndExpand" />
                                    <Label Grid.Column="1" FontFamily="FASolid" Text="{x:Static helper:FontAwesome.Plus}" FontSize="18" TextColor="blue" VerticalOptions="Center" HorizontalOptions="End">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CommunityPostViewModel}}, Path=AddPlansToUserAccountCommand}" CommandParameter="{Binding .}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                </Grid>
                                <HorizontalStackLayout Padding="10,0,10,10" Spacing="10" Margin="0,5,0,0">
                                    <HorizontalStackLayout Spacing="4">
                                        <Label FontFamily="FASolid" Text="{x:Static helper:FontAwesome.Heart}" FontSize="20" TextColor="Red">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CommunityPostViewModel}}, Path=LikePostCommand}" CommandParameter="{Binding .}" />
                                            </Label.GestureRecognizers>
                                        </Label>
                                        <Label Text="{Binding LikeCount}" FontSize="14" />
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Spacing="6">
                                        <CheckBox x:Name="CommentToggle" IsVisible="False" />
                                        <Label FontFamily="FASolid" Text="{x:Static helper:FontAwesome.Comment}" FontSize="20" />
                                        <Label Text="{Binding Comments.Count}" FontSize="14" />
                                    </HorizontalStackLayout>
                                </HorizontalStackLayout>
                                <VerticalStackLayout x:Name="CommentBox" IsVisible="False" Padding="10,0,10,10" Spacing="10" Margin="0,5,0,0">
                                    <CollectionView ItemsSource="{Binding Comments}">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <VerticalStackLayout Spacing="2">
                                                    <Label Text="{Binding Username}" FontAttributes="Bold" FontSize="14" />
                                                    <Label Text="{Binding Comment}" FontSize="12" />
                                                </VerticalStackLayout>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                    <Grid ColumnDefinitions="*,Auto">
                                        <Entry Grid.Column="0" Placeholder="Enter Comment" Text="{Binding Source={RelativeSource AncestorType={x:Type vm:CommunityPostViewModel}}, Path=Comment}" FontSize="14" BackgroundColor="White" />
                                        <Label Grid.Column="1" FontFamily="FASolid" Text="{x:Static helper:FontAwesome.Plus}" FontSize="20" TextColor="Blue" Padding="10,0">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CommunityPostViewModel}}, Path=CreateCommentCommand}" CommandParameter="{Binding .}" />
                                            </Label.GestureRecognizers>
                                        </Label>
                                    </Grid>
                                </VerticalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </Grid>
</ContentPage>