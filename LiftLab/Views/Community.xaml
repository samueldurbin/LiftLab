<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LiftLab.ViewModels"
             x:Class="LiftLab.Views.Community"
             Title="Community">

    <ContentPage.BindingContext>
        <vm:CommunityViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button Text="+" 
                Command="{Binding NavigationCommand}" 
                WidthRequest="40" 
                HeightRequest="40"
                BackgroundColor="Green"
                FontAttributes="Bold"
                CornerRadius="40"
                HorizontalOptions="End"
                VerticalOptions="Start"
                Margin="0,0,20,0" />

        <StackLayout Grid.Row="1" Padding="10">
            <Button Text="Refresh" FontAttributes="Bold" BackgroundColor="Green" Command="{Binding GetFitnessPostsCommand}" />
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
            <CollectionView ItemsSource="{Binding FitnessPosts}" VerticalOptions="FillAndExpand">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="10"
                               BorderColor="LightGray"
                               Padding="10"
                               Margin="0,10,0,20"
                               HorizontalOptions="FillAndExpand">
                            <VerticalStackLayout Spacing="10">
                                <Label Text="{Binding Username}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="Black" />

                                <Image Source="{Binding ImageUrl}"
                                       HeightRequest="210"
                                       Aspect="AspectFill"
                                       BackgroundColor="Green"
                                       HorizontalOptions="FillAndExpand" />

                                <Label Text="{Binding Caption}"
                                       FontSize="14"
                                       TextColor="Black"
                                       LineBreakMode="WordWrap" />

                                <Entry Placeholder="Enter Comment" Text="{Binding Source={RelativeSource AncestorType={x:Type vm:CommunityViewModel}}, Path=Comment}" /> <!--Comments come from viewmodel-->
                                <CollectionView ItemsSource="{Binding Comments}"> <!--Commentsl-->
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <StackLayout Padding="5">
                                                <Label Text="{Binding Username}" FontAttributes="Bold" FontSize="14"/> <!--Username field for the ui-->
                                                <Label Text="{Binding Comment}" FontSize="12"/><!--Comments part for the ui-->
                                            </StackLayout>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>

                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </Grid>

</ContentPage>