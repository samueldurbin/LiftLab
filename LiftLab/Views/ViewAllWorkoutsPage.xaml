<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiftLab.Views.ViewAllWorkoutsPage"
             Title="Workouts in Plan">
    
    <!--This is where the incoming workout data will be shown-->
    <CollectionView ItemsSource="{Binding WorkoutsInPlan}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <!--The Box the workout name will be stored-->
                <Frame BackgroundColor="LightBlue" CornerRadius="12" Padding="10" Margin="5">
                    <!--Name of the Workout and its properties-->
                    <Label Text="{Binding WorkoutName}" FontSize="22" TextColor="White"/>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>