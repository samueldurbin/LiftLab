<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiftLab.Views.ViewAllWorkoutsPage"
             xmlns:vm="clr-namespace:LiftLab.ViewModels"
             x:Name="PageRef"
             xmlns:helper="clr-namespace:LiftLab.Helpers"
             Title="Workouts in Plan">

    <ContentPage.BindingContext>
        <vm:WorkoutsInPlanViewModel />
    </ContentPage.BindingContext>


    <CollectionView ItemsSource="{Binding WorkoutsInPlan}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BackgroundColor="LightBlue" CornerRadius="12" Padding="10" Margin="5">
                    <VerticalStackLayout Spacing="10">

                        <!-- Workout Name -->
                        <Label 
                            Text="{Binding WorkoutName}" 
                            FontSize="22" 
                            TextColor="White" 
                            HorizontalOptions="Center" />

                        <!-- Editable Reps -->
                        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                            <Label Text="Reps:" VerticalOptions="Center" TextColor="White" />
                            <Entry 
                                Text="{Binding Reps, Mode=TwoWay}" 
                                Keyboard="Numeric" 
                                WidthRequest="80"
                                BackgroundColor="White"
                                TextColor="Black" />
                        </HorizontalStackLayout>

                        <!-- Editable Sets -->
                        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                            <Label Text="Sets:" VerticalOptions="Center" TextColor="White" />
                            <Entry 
                                Text="{Binding Sets, Mode=TwoWay}" 
                                Keyboard="Numeric" 
                                WidthRequest="80"
                                BackgroundColor="White"
                                TextColor="Black" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                            <Label Text="Kg:" VerticalOptions="Center" TextColor="White" />
                            <Entry 
                                Text="{Binding Kg, Mode=TwoWay}" 
                                Keyboard="Numeric" 
                                WidthRequest="80"
                                BackgroundColor="White"
                                TextColor="Black" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="10" VerticalOptions="Center" HorizontalOptions="EndAndExpand">
                            <Label Grid.Column="0" FontFamily="FASolid" Text="{x:Static helper:FontAwesome.TrashCan}" FontSize="30" TextColor="Blue">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding BindingContext.DeleteWorkoutCommand, Source={x:Reference PageRef}}" CommandParameter="{Binding .}" />
                                </Label.GestureRecognizers>
                            </Label>
                        </HorizontalStackLayout>

                        <!-- Save Button -->
                        <Button 
                            Text="Save Changes" 
                            Command="{Binding BindingContext.SaveWorkoutCommand, Source={x:Reference PageRef}}" 
                            CommandParameter="{Binding .}" 
                            BackgroundColor="DarkBlue" 
                            TextColor="White" 
                            CornerRadius="10" 
                            Padding="10"
                            HorizontalOptions="Center" />

                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
