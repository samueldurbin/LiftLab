<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiftLab.Views.ViewAllWorkoutsPage"
             xmlns:vm="clr-namespace:LiftLab.ViewModels"
             x:Name="PageRef"
             xmlns:helper="clr-namespace:LiftLab.Helpers"
             Title="Workouts in Plan">

    <ContentPage.BindingContext>
        <vm:WorkoutsInPlanViewModel />
    </ContentPage.BindingContext>


    <Grid>
        <!--delete icon-->
        <Label Text="{x:Static helper:FontAwesome.TrashCan}"
               FontFamily="FASolid"
               FontSize="26"
               TextColor="Red"
               HorizontalOptions="End"
               VerticalOptions="Start"
               Margin="0,20,20,0">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding DeletePlanCommand}" />
            </Label.GestureRecognizers>
        </Label>

        <!--workouts within the plan-->
        <CollectionView ItemsSource="{Binding WorkoutsInPlan}" Margin="0,50,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="LightBlue" CornerRadius="12" Padding="10" Margin="5">
                        <VerticalStackLayout Spacing="10">

                            <!--name of the workotus-->
                            <Label Text="{Binding WorkoutName}" FontSize="20" TextColor="White" HorizontalOptions="Center" />

                            <!--reps and sets -->
                            <HorizontalStackLayout Spacing="15">
                                <HorizontalStackLayout Spacing="5">
                                    <Label Text="Reps:" TextColor="White" />
                                    <Entry Text="{Binding Reps, Mode=TwoWay}" Keyboard="Numeric" WidthRequest="60" BackgroundColor="LightBlue" TextColor="Black" />
                                </HorizontalStackLayout>
                                <HorizontalStackLayout Spacing="5">
                                    <Label Text="Sets:" TextColor="White" />
                                    <Entry Text="{Binding Sets, Mode=TwoWay}" Keyboard="Numeric" WidthRequest="60" BackgroundColor="LightBlue" TextColor="Black" />
                                </HorizontalStackLayout>
                            </HorizontalStackLayout>

                            <!--kg-->
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="Kg:" TextColor="White" />
                                <Entry Text="{Binding Kg, Mode=TwoWay}" Keyboard="Numeric" WidthRequest="80" BackgroundColor="LightBlue" TextColor="Black" />
                            </HorizontalStackLayout>

                            <!--delete icon-->
                            <HorizontalStackLayout Spacing="10" HorizontalOptions="End">
                                <Label FontFamily="FASolid"
                               Text="{x:Static helper:FontAwesome.TrashCan}"
                               FontSize="28"
                               TextColor="Red">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding BindingContext.DeleteWorkoutCommand, Source={x:Reference PageRef}}" CommandParameter="{Binding .}" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </HorizontalStackLayout>

                            <!--save-->
                            <Button Text="Save Changes"
                            Command="{Binding BindingContext.SaveWorkoutCommand, Source={x:Reference PageRef}}"
                            CommandParameter="{Binding .}"
                            BackgroundColor="DarkBlue"
                            TextColor="White"
                            CornerRadius="10"
                            FontSize="14"
                            Padding="6"
                            HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

