<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiftLab.Views.CreateWorkoutPage"
             xmlns:vm="clr-namespace:LiftLab.ViewModels"
             Title="CreateWorkoutPage">

    <ContentPage.BindingContext>
        <vm:WorkoutPlansViewModel />
    </ContentPage.BindingContext>
    
    <StackLayout Padding="20" Spacing="10">
        <Entry Placeholder="UserId" Text="{Binding UserId}"/>
        <!--Hardcoded for now-->
        <Entry Placeholder="PlanName" Text="{Binding WorkoutPlanName}" />

        <Button Text="Create WorkoutPlan" Command="{Binding CreatePlanCommand}" />
        <Button Text="Load All Workouts" Command="{Binding GetWorkoutsCommand}" />

        <CollectionView ItemsSource="{Binding WorkoutList}" Margin="0,20,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Black" Padding="10" Margin="0,10,0,0" CornerRadius="8">
                        <Grid ColumnDefinitions="*, Auto" VerticalOptions="Center">
                            <Label Text="{Binding Workout.WorkoutName}" VerticalOptions="Center" />
                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" VerticalOptions="Center" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>