<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiftLab.Views.PortfolioPage"
             Title="PortfolioPage">
    
    <!--Grid Layout-->
    <Grid RowDefinitions="Auto, Auto, Auto" Padding="20,0"> 

        <!--Background, rounded border-->
        <Frame Grid.Row="0" BackgroundColor="Green" VerticalOptions="Start" HeightRequest="160" HasShadow="False" CornerRadius="20" Margin="0, 45, 0, 20" Padding="0">
        <!-- For future profile image development-->
        </Frame>

        <!--Profile Picture and Username-->
        <Frame Grid.Row="0" Margin="0,45,200,0" BorderColor="Green" HorizontalOptions="Center" WidthRequest="100" HeightRequest="100" HasShadow="False" CornerRadius="55" Padding="0">
            <!--This is where an image background would go if it was designed in the future-->
        </Frame>

        <!--Text and Pal counts-->
        <Label Grid.Row="0" Text="Spiderman" FontAttributes="Bold" Margin="60,60,0,0" TextColor="Black" HorizontalTextAlignment="Center" FontSize="25"/>
        <Label Grid.Row="0" Text="MyPals:" FontAttributes="Bold" Margin="10,115,0,0" TextColor="Black" HorizontalTextAlignment="Center" FontSize="20"/>
        <Label Grid.Row="0" Text="Pals:" FontAttributes="Bold" Margin="180,115,0,0" TextColor="Black" HorizontalTextAlignment="Center" FontSize="20"/>

    </Grid>
</ContentPage>