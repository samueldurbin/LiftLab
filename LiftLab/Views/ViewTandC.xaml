<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="LiftLab.Views.ViewTandC">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="10">
            <Label Text="Terms and Conditions: Health Disclaimers. This app does not serve as a substitute for professional medical advice" FontAttributes="Bold" FontSize="18" />
            <!--close button-->
            <Button Text="Close" Command="{Binding CloseCommand}" Margin="0,20,0,0"/>
        </VerticalStackLayout>
    </ScrollView>

</toolkit:Popup>