<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiftLab.Views.UpdateUserSettingsPage"
             xmlns:vm="clr-namespace:LiftLab.ViewModels"
             Title="UpdateUserSettingsPage">
    
    <ContentPage.BindingContext>
        <vm:SettingsViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Margin="30">
            <!--Update user account form-->
            <Label Text="Update Account" FontAttributes="Bold" FontSize="24" HorizontalOptions="Center" />
            <Entry Placeholder="Username" Text="{Binding Username}" />
            <Entry Placeholder="Email" Text="{Binding Email}" />
            <Entry Placeholder="Phone Number" Text="{Binding PhoneNumber}" />
            <DatePicker Date="{Binding DateOfBirth}" IsEnabled="False" />
            <Entry Placeholder="Current Password" Text="{Binding CurrentPassword}" IsPassword="True" />
            <Entry Placeholder="New Password" Text="{Binding NewPassword}" IsPassword="True" />

            <Button Text="Save Changes" Command="{Binding SaveCommand}" BackgroundColor="Blue" TextColor="White" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>