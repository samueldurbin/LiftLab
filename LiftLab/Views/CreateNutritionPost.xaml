<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiftLab.Views.CreateNutritionPost"
             xmlns:vm="clr-namespace:LiftLab.ViewModels"
             Title="CreateNutritionPost">
    
    <ContentPage.BindingContext>
        <vm:CreateNutritionPostViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="30" Spacing="20">
        <Entry Placeholder="Enter Username" Text="{Binding Username}" />
        <Entry Placeholder="Enter Image URL (optional)" Text="{Binding ImageUrl}" />
        <Editor Placeholder="Enter Caption" Text="{Binding Caption}"/>
        <Button Text="Submit Post" Command="{Binding CreatePostCommand}" />
    </StackLayout>
</ContentPage>