<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="LiftLab.Views.ViewAddedPlan">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="10">

            <!--this is the title of the plan to display to the user -->
            <Label Text="{Binding PlanTitle}" FontAttributes="Bold" FontSize="18" />

            <Label Text="{Binding Description}" FontSize="14" />

            <!--list of either workouts or meals-->
            <CollectionView ItemsSource="{Binding ItemNames}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding}" FontSize="14" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Close" Command="{Binding CloseCommand}" Margin="0,20,0,0"/>
        </VerticalStackLayout>
    </ScrollView>

</toolkit:Popup>
