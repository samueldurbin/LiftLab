<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LiftLab.ViewModels"
             x:Class="LiftLab.Views.CommunityPage"
             xmlns:helper="clr-namespace:LiftLab.Helpers"
             Title="LiftLab Community">
    
    <ContentPage.BindingContext>
        <vm:CommunityViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*" Padding="10">
        <!-- Top bar with user icon and plus icon -->
        <Grid ColumnDefinitions="Auto,*,Auto" Padding="10">
            <!-- User Icon (left) -->
            <Label Grid.Column="0" FontFamily="FASolid" Text="{x:Static helper:FontAwesome.Plus}" FontSize="28" TextColor="Red" VerticalOptions="Start" HorizontalOptions="Start" />
            <!-- Plus Icon (right) -->
            <Label Grid.Column="2" FontFamily="FASolid" Text="{x:Static helper:FontAwesome.PeopleGroup}" FontSize="28" TextColor="Red" VerticalOptions="Start" HorizontalOptions="End">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigationCommand}" />
                </Label.GestureRecognizers>
            </Label>
        </Grid>
        
        <StackLayout Grid.Row="1" Padding="0">
            <!-- Loading indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
            <!-- Posts -->
            <CollectionView ItemsSource="{Binding FitnessPosts}" VerticalOptions="FillAndExpand">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout Padding="0" Spacing="0" BackgroundColor="White">
                            <!-- User info -->
                            <HorizontalStackLayout Spacing="10" Padding="10" VerticalOptions="Center">
                                <Label FontFamily="FASolid" Text="{x:Static helper:FontAwesome.User}" FontSize="18" TextColor="Black" VerticalOptions="Center" />
                                <Label Text="{Binding Username}" FontSize="18" FontAttributes="Bold" TextColor="Black" VerticalOptions="Center" />
                            </HorizontalStackLayout>
                            <!-- Post image with overlay icons -->
                            <Grid HeightRequest="210">
                                <Image Source="{Binding ImageUrl}" Aspect="AspectFill" HorizontalOptions="FillAndExpand" BackgroundColor="LightPink" />
                                <!-- Plus icon top-left -->
                                <!--<Label FontFamily="FASolid" Text="{x:Static helper:FontAwesome.Plus}" FontSize="18" TextColor="Black" HorizontalOptions="Start" VerticalOptions="Start" Margin="10" />-->
                                <Label FontFamily="FASolid" Text="{x:Static helper:FontAwesome.Plus}" FontSize="18" TextColor="Black" HorizontalOptions="Start" VerticalOptions="Start" Margin="10">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CommunityViewModel}}, Path=AddWorkoutPlanCommand}" CommandParameter="{Binding .}" />
                                    </Label.GestureRecognizers>
                                </Label>
                                <!-- Eye icon top-right -->
                                <Label FontFamily="FASolid" Text="{x:Static helper:FontAwesome.Eye}" FontSize="18" TextColor="Black" HorizontalOptions="End" VerticalOptions="Start" Margin="10" />
                            </Grid>
                            <!-- Likes & comments -->
                            <HorizontalStackLayout Padding="10" Spacing="10">
                                <!-- Likes -->
                                <HorizontalStackLayout Spacing="4" VerticalOptions="Center">
                                    <Label FontFamily="FASolid" Text="{x:Static helper:FontAwesome.Heart}" FontSize="20" TextColor="Red" VerticalOptions="Center">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CommunityViewModel}}, Path=LikePostCommand}" CommandParameter="{Binding .}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <Label Text="{Binding LikeCount}" FontSize="14" TextColor="Black" VerticalOptions="Center"/>
                                </HorizontalStackLayout>
                                <!-- Comments -->
                                <HorizontalStackLayout Spacing="6" VerticalOptions="Center">
                                    <CheckBox x:Name="CommentToggle" IsVisible="False" />
                                    <Label FontFamily="FASolid" Text="{x:Static helper:FontAwesome.Comment}" FontSize="20" TextColor="Black" VerticalOptions="Center" />
                                    <Label Text="{Binding Comments.Count}" FontSize="14" TextColor="Black" VerticalOptions="Center"/>
                                </HorizontalStackLayout>
                            </HorizontalStackLayout>
                            <!-- Caption -->
                            <Label Text="{Binding Caption}" FontSize="14" TextColor="black" Padding="10,0,10,10" />
                            <!-- Comment box -->
                            <VerticalStackLayout x:Name="CommentBox" IsVisible="False" Padding="10" Spacing="6">
                                <CollectionView ItemsSource="{Binding Comments}">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <VerticalStackLayout Spacing="2">
                                                <Label Text="{Binding Username}" FontAttributes="Bold" FontSize="14" />
                                                <Label Text="{Binding Comment}" FontSize="12" />
                                            </VerticalStackLayout>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                                <Grid ColumnDefinitions="*,Auto" Padding="0" Margin="0">
                                    <Entry Grid.Column="0" Placeholder="Enter Comment" 
                                           Text="{Binding Source={RelativeSource AncestorType={x:Type vm:CommunityViewModel}}, Path=Comment}" 
                                           HorizontalOptions="FillAndExpand" FontSize="14" BackgroundColor="White" />
                                    <Label Grid.Column="1" FontFamily="FASolid" Text="{x:Static helper:FontAwesome.Plus}" FontSize="20" TextColor="Blue" Padding="10,0" VerticalOptions="Center">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CommunityViewModel}}, Path=CreateCommentCommand}" CommandParameter="{Binding .}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                </Grid>
                            </VerticalStackLayout>
                            <BoxView HeightRequest="1" Color="Red" HorizontalOptions="FillAndExpand" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </Grid>
</ContentPage>