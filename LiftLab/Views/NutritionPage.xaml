<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiftLab.Views.NutritionPage"
             xmlns:vm="clr-namespace:LiftLab.ViewModels"
             xmlns:helper="clr-namespace:LiftLab.Helpers"
             Title="NutritionPage">
    
    <ContentPage.BindingContext>
        <vm:NutritionViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <Grid Padding="10" RowSpacing="10" RowDefinitions="Auto, Auto, Auto, Auto, Auto">

            <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Padding="7">
                <Label Grid.Column="0" Text="My Meals" FontSize="24" FontAttributes="Bold" HorizontalOptions="Start" VerticalOptions="Center" />

                <Label Grid.Column="1" FontFamily="FASolid" Text="{x:Static helper:FontAwesome.Plus}" FontSize="24" TextColor="CornflowerBlue" HorizontalOptions="End" VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToCreateMealsCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </Grid>

            <!-- Meals List -->
            <CollectionView Grid.Row="1" ItemsSource="{Binding UserMeals}" HeightRequest="300">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="5" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="10" BackgroundColor="White" CornerRadius="12" HasShadow="True">
                            <VerticalStackLayout Spacing="4">
                                <Label Text="{Binding MealName}" FontSize="18" FontAttributes="Bold" />
                                <Label Text="{Binding Type}" FontSize="14" TextColor="Gray" />
                            </VerticalStackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:NutritionViewModel}}, Path=NavigateToMealDetailsCommand}"
                        CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                        </Frame>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Grid Grid.Row="2" ColumnDefinitions="*, Auto" Padding="7">
                <Label 
                Grid.Column="0" 
                Text="My Meal Plans" 
                FontSize="24" 
                FontAttributes="Bold" 
                HorizontalOptions="Start" 
                VerticalOptions="Center" />

                <Label 
                Grid.Column="1" 
                FontFamily="FASolid" 
                Text="{x:Static helper:FontAwesome.Plus}" 
                FontSize="24" 
                TextColor="CornflowerBlue" 
                HorizontalOptions="End" 
                VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToCreateMealPlanCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </Grid>

            <CollectionView Grid.Row="3" 
                        ItemsSource="{Binding UserMealPlans}" 
                        HeightRequest="300">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="5" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="10" BackgroundColor="White" CornerRadius="12" HasShadow="True">
                            <Label Text="{Binding MealPlanName}" FontSize="18" FontAttributes="Bold" />
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:NutritionViewModel}}, Path=NavigateToMealPlanDetailsCommand}"
                        CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                        </Frame>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </Grid>
    </ScrollView>
</ContentPage>