<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiftLab.Views.NutritionPage"
             xmlns:vm="clr-namespace:LiftLab.ViewModels"
             Title="NutritionPage">
    
    <ContentPage.BindingContext>
        <vm:NutritionViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout Padding="10" Spacing="20">
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />

            <Button Text="Load Nutrition Data" Command="{Binding LoadUserMealsCommand}" />
            <Label Text="My Meals" FontSize="20" FontAttributes="Bold" Margin="0,10,0,0"/>
            <CollectionView ItemsSource="{Binding UserMeals}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="10" BackgroundColor="White" CornerRadius="12" HasShadow="True">
                            <VerticalStackLayout Spacing="4">
                                <Label Text="{Binding MealName}" FontSize="18" FontAttributes="Bold" />
                                <Label Text="{Binding Type}" FontSize="14" TextColor="Gray" />
                            </VerticalStackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:NutritionViewModel}}, Path=OpenMealDetailsCommand}"
                        CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label Text="My Meal Plans" FontSize="20" FontAttributes="Bold" Margin="0,20,0,0"/>
            <CollectionView ItemsSource="{Binding UserMealPlans}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="10" BackgroundColor="LightYellow" CornerRadius="10" HasShadow="True">
                            <Label Text="{Binding MealPlanName}" FontSize="16" FontAttributes="Bold" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </StackLayout>
    </ScrollView>
</ContentPage>