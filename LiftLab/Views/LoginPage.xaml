<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LiftLab.ViewModels"
             x:Class="LiftLab.Views.LoginPage">

    <ContentPage.BindingContext>
        <vm:LoginViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="0.4*, 0.6*">

        <!-- Top Red Area with Logo -->
        <Grid BackgroundColor="Red" Grid.Row="0">
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Image Source="logo.png"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Aspect="AspectFit"
                       MaximumHeightRequest="300"
                       MaximumWidthRequest="300" />
            </VerticalStackLayout>
        </Grid>

        <!-- Bottom Login Form -->
        <Grid Grid.Row="1" Padding="20">
            <VerticalStackLayout HorizontalOptions="Center"
                                  Spacing="15"
                                  WidthRequest="300"
                                  MaximumWidthRequest="500">

                <Label Text="Welcome Back!" 
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />

                <Entry Text="{Binding Username}" 
                       Placeholder="Username"
                       HeightRequest="50" />

                <Entry Text="{Binding Password}" 
                       Placeholder="Password" 
                       IsPassword="True"
                       HeightRequest="50" />

                <Label Text="Forgot your password?"
                       TextColor="Grey"
                       FontSize="14"
                       TextDecorations="Underline"
                       HorizontalOptions="Center" />

                <!-- Terms and Conditions -->
                <Label Text="By logging in you agree to our Terms and Conditions"  FontSize="12" TextColor="Grey">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ShowTandCCommand}" />
                    </Label.GestureRecognizers>
                </Label>


                <Button Text="Login"
                        Command="{Binding LoginCommand}"
                        BackgroundColor="Blue"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50" />

                <Label HorizontalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnRegisterTapped" />
                    </Label.GestureRecognizers>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Don't have an account? " />
                            <Span Text="Register Here" TextDecorations="Underline" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Label Text="{Binding ErrorMessage}"
                       TextColor="Red"
                       IsVisible="{Binding IsErrorVisible}"
                       FontSize="14"
                       HorizontalOptions="Center" />

            </VerticalStackLayout>
        </Grid>

    </Grid>
</ContentPage>

