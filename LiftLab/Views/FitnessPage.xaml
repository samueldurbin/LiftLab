<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiftLab.Views.FitnessPage"
             xmlns:vm="clr-namespace:LiftLab.ViewModels"
             Title="Fitness"> <!--Title for the page-->

    <ContentPage.BindingContext>
        <vm:WorkoutPlansViewModel />
    </ContentPage.BindingContext>

    <!--Three Grid Columns that are dynamic for different screen sizes-->
    <!--Responsive Layout-->
    <Grid RowDefinitions="Auto,*,Auto">
        <!--Top Area of the View that contains Title and First Horizontal Box-->
        <VerticalStackLayout Spacing="20" Padding="20">
            <!--Title that is hardcoded for now-->
            <Label Text="!Push Day!" FontSize="32" FontAttributes="Bold" TextColor="Blue" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
            <!--WorkoutPlan Suggestion Box-->
            <!--Frame for containers which is more custom-->
            <Frame BackgroundColor="LightGreen" CornerRadius="20" HasShadow="True" Padding="10" VerticalOptions="FillAndExpand">
                <!--WorkoutPlan Title which is also hardcoded for now-->
                <Label Text="Shoulder Workouts" FontSize="22" FontAttributes="Bold" TextColor="White" VerticalOptions="Center" HorizontalOptions="Center"/>
            </Frame>
        </VerticalStackLayout>

        <!--Column Defintions mean that one side will take up 4* (40%) on the left and 6*(60%) on the right to equal a 100% which helps splitting up the page-->
        <!--Row Definitions mean it takes up two equal heights-->
        <!--* means to recieve parts additional parts of the UI outside of percentages to make the views adaptative-->
        <Grid Grid.Row="1" ColumnDefinitions="4*,6*" RowDefinitions="*,*" Padding="20" ColumnSpacing="20" RowSpacing="20" VerticalOptions="FillAndExpand">
            <Frame Grid.Row="0" Grid.Column="0" BackgroundColor="LightBlue" CornerRadius="10" HasShadow="True" Padding="10" VerticalOptions="FillAndExpand">
                <!--makes the boxes clickable to navigate to other pages-->
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding CreateWorkoutPlanButtonCommand}" />
                </Frame.GestureRecognizers>
                <!--Text in Box-->
                <Label Text="Create a Workout Plan" FontAttributes="Bold" TextColor="White" VerticalOptions="Center" HorizontalOptions="Center"/>
            </Frame>
            <Frame Grid.Row="1" Grid.Column="0" BackgroundColor="Orange" CornerRadius="10" HasShadow="True" Padding="10" VerticalOptions="FillAndExpand">
                <!--Text in Second Box-->
                <Label Text="View all Workout Plans" FontAttributes="Bold" TextColor="White" VerticalOptions="Center" HorizontalOptions="Center"/>
            </Frame>
            <Frame Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" BackgroundColor="LightCoral" CornerRadius="10" HasShadow="True" Padding="10" VerticalOptions="FillAndExpand">
                <VerticalStackLayout VerticalOptions="FillAndExpand" Spacing="10">
                    <!--Text in third Box-->
                    <Label Text="Friend Activity" FontSize="20" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>
        </Grid>

    </Grid>

</ContentPage>