<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiftLab.Views.ViewMealsPage"
             xmlns:vm="clr-namespace:LiftLab.ViewModels"
             Title="ViewMealsPage">

    <ContentPage.BindingContext>
        <vm:MealViewModel />
    </ContentPage.BindingContext>

    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="12">
            <!--basic display for meal values-->
            <Label Text="{Binding MealName}" FontSize="24" FontAttributes="Bold" />
            <Label Text="{Binding Type}" FontSize="18" />
            <Label Text="Calories:" FontAttributes="Bold" />
            <Label Text="{Binding Calories}" />
            <Label Text="Recipe:" FontAttributes="Bold" />
            <Label Text="{Binding Recipe}" LineBreakMode="WordWrap" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>