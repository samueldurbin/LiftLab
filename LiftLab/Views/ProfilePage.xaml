<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiftLab.Views.ProfilePage"
             xmlns:helper="clr-namespace:LiftLab.Helpers"
             xmlns:vm="clr-namespace:LiftLab.ViewModels"
             Title="Profile">

    <ContentPage.BindingContext>
        <vm:ProfileViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*" Padding="10">

        <VerticalStackLayout Grid.Row="0" HorizontalOptions="Center" Spacing="8">
            <Frame WidthRequest="120" HeightRequest="120" CornerRadius="80" BackgroundColor="Red" HasShadow="True" HorizontalOptions="Center">
                <Label FontFamily="FASolid" Text="{x:Static helper:FontAwesome.User}" FontSize="56" TextColor="Black" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Frame>

            <Label Text="{Binding Username}" FontAttributes="Bold" FontSize="24" TextColor="Black" HorizontalOptions="Center" />

            <Label Text="This is where the bio will go" FontSize="16" LineBreakMode="WordWrap" HorizontalTextAlignment="Center" Margin="0,10,0,0" />

            <Label FontFamily="FASolid" Text="{x:Static helper:FontAwesome.Gear}" FontSize="35" TextColor="black" HorizontalOptions="End" IsVisible="{Binding UserProfile}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SettingsCommand}" />
                </Label.GestureRecognizers>
            </Label>
        </VerticalStackLayout>

        <CollectionView Grid.Row="1" ItemsSource="{Binding UserPosts}" VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,10" Padding="0" HasShadow="True" CornerRadius="10" BackgroundColor="White">
                        <VerticalStackLayout Padding="0" Spacing="0">

                            <Grid ColumnDefinitions="Auto,*,Auto" Padding="10,10,10,0">
                                <Label Grid.Column="0" FontFamily="FASolid" Text="{x:Static helper:FontAwesome.User}" FontSize="18" VerticalOptions="Center" />
                                <Label Grid.Column="1" Text="{Binding Username}" FontSize="18" FontAttributes="Bold" Margin="6,0,0,0" VerticalOptions="Center" />
                                <Label Grid.Column="2" FontFamily="FASolid" Text="{x:Static helper:FontAwesome.Eye}" FontSize="18" TextColor="Gray" HorizontalOptions="End" VerticalOptions="Center" />
                            </Grid>

                            <BoxView HeightRequest="1" Color="LightGray" HorizontalOptions="Fill" Margin="10,5,10,0" />

                            <Grid ColumnDefinitions="*,Auto" Padding="10,5,10,10">
                                <Label Grid.Column="0" Text="{Binding Caption}" FontSize="14" HorizontalOptions="StartAndExpand" />
                                <Label Grid.Column="1" FontFamily="FASolid" Text="{x:Static helper:FontAwesome.Plus}" FontSize="18" TextColor="Gray" VerticalOptions="Center" HorizontalOptions="End" />
                            </Grid>

                            <HorizontalStackLayout Padding="10,0,10,10" Spacing="10">
                                <HorizontalStackLayout Spacing="4">
                                    <Label FontFamily="FASolid" Text="{x:Static helper:FontAwesome.Heart}" FontSize="20" TextColor="Red" />
                                    <Label Text="{Binding LikeCount}" FontSize="14" />
                                </HorizontalStackLayout>

                                <HorizontalStackLayout Spacing="6">
                                    <Label FontFamily="FASolid" Text="{x:Static helper:FontAwesome.Comment}" FontSize="20" />
                                    <Label Text="{Binding Comments.Count}" FontSize="14" />
                                </HorizontalStackLayout>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>