<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiftLab.Views.CreateMealPlanPage"
             xmlns:vm="clr-namespace:LiftLab.ViewModels"
             Title="CreateMealPlanPage">
    
    <ContentPage.BindingContext>
        <vm:NutritionViewModel />
    </ContentPage.BindingContext>


    <StackLayout Padding="20" Spacing="10">
        <Entry Placeholder="Meal Plan Name" Text="{Binding MealPlanName}" />
        <Button Text="Load Meals" Command="{Binding LoadMealsCommand}" />

        <Label Text="Select Meals:" FontAttributes="Bold" Margin="0,20,0,0" />

        <CollectionView ItemsSource="{Binding MealList}"
                        HeightRequest="300"
                        VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Padding="10">
                        <Label Text="{Binding Meal.MealName}" VerticalOptions="Center"/>
                        <CheckBox IsChecked="{Binding IsSelected}" HorizontalOptions="EndAndExpand"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Create Meal Plan" Command="{Binding CreateMealPlanCommand}" Margin="0,20,0,0"/>
    </StackLayout>
</ContentPage>