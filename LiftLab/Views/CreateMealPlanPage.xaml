<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiftLab.Views.CreateMealPlanPage"
             xmlns:vm="clr-namespace:LiftLab.ViewModels"
             Title="Nutrition">

    <ContentPage.BindingContext>
        <vm:NutritionViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="20" RowSpacing="10"
          RowDefinitions="Auto, Auto, Auto, *, Auto"
          ColumnDefinitions="*">

        <Label Grid.Row="0"
               Text="Create Meal Plan"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Label Grid.Row="1"
               Text="Give your meal plan a name and select meals to include."
               FontSize="14"
               TextColor="Gray"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center" />

        <!--Meal Plan name-->
        <Entry Grid.Row="2"
               Placeholder="Meal Plan Name"
               Text="{Binding MealPlanName}"
               FontSize="18"
               BackgroundColor="White"
               Margin="0,10,0,0"
               HorizontalOptions="Fill" />

        <Frame Grid.Row="3"
               CornerRadius="12"
               BackgroundColor="White"
               Padding="10"
               HasShadow="True"
               BorderColor="LightGray">
            <!--List of the meals -->
            <CollectionView ItemsSource="{Binding MealList}"
                            VerticalOptions="FillAndExpand"
                            ItemSizingStrategy="MeasureAllItems">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <!--meal name-->
                        <Grid ColumnDefinitions="*, Auto" Padding="10" VerticalOptions="Center">
                            <Label Grid.Column="0"
                                   Text="{Binding Meal.MealName}"
                                   FontSize="18"
                                   VerticalOptions="Center"
                                   TextColor="Black" />
                            <!--Selection-->
                            <CheckBox Grid.Column="1"
                                      IsChecked="{Binding IsSelected}"
                                      HorizontalOptions="End"
                                      VerticalOptions="Center" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Frame>

        <!--Button for creating meal plan-->
        <Button Grid.Row="4"
                Text="Create Meal Plan"
                Command="{Binding CreateMealPlanCommand}"
                FontSize="18"
                CornerRadius="10"
                BackgroundColor="Blue"
                TextColor="White"
                Margin="0,20,0,0"
                HeightRequest="50"
                HorizontalOptions="Fill" />

    </Grid>

</ContentPage>