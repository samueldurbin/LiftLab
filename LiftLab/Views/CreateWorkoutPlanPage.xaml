<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiftLab.Views.CreateWorkoutPlanPage"
             xmlns:vm="clr-namespace:LiftLab.ViewModels"
             Title="Create a New Workout Plan">

    <ContentPage.BindingContext>
        <vm:WorkoutPlansViewModel />
    </ContentPage.BindingContext>

    <!--Where the user creates the name of the workout plan-->
    <StackLayout Padding="20" Spacing="10">
        <Entry Placeholder="Plan Name" Text="{Binding WorkoutPlanName}" />
        <Button Text="Add Exercises" Clicked="OnAddExercisesClicked"  />
        <!--List of selected workouts from select workotus page-->
        <Label Text="Selected Exercises:" FontAttributes="Bold" Margin="0,20,0,0" />
        <CollectionView ItemsSource="{Binding WorkoutList}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame IsVisible="{Binding IsSelected}" Padding="10" Margin="5">
                        <Label Text="{Binding Workout.WorkoutName}" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <!--button to create workout plans-->
        <Button Text="Create Workout Plan" Command="{Binding CreatePlanCommand}" Margin="0,20,0,0"/>
    </StackLayout>

</ContentPage>